<%= form_with(url: search_words_path, local: true, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "単語を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @words.each do |word| %>
    <li>
    <%= link_to word.jiantizi, word_path(word.id) %>
    <%= word.pronunciation_c %>
  </li>
  <% end %>
</div>