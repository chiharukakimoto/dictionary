<div class="wrapper">
    <div class="search">
      <%= form_with(url: search_words_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "単語を検索", class: "search-input" %>
      <%= form.submit "Search", class: "search-btn" %>
      <% end %>
    </div>
  <% @words.each do |word| %>
    <%= link_to word_path(word.id) do %>
      <li>
        <%= word.jiantizi %><%= word.pronunciation_c %>
      </li>
    <% end %>
  <% end %>
</div>